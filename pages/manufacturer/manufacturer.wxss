@import "../../font/font.wxss";

.title {
  font-size: 17px;
  font-weight: 600;
  color: var(--black);
  width: 100%;
  display: block;
  text-align: center;
}

.back-button {
  width: 40px;
  height: 40px;
  color: var(--black);
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
  line-height: 40px;
}

.iconfont.icon-back {
  font-size: 20px;
  font-weight: 600;
}

.list {
  max-height: calc(100vh - 160px);
  border-radius: 10px 10px 0 0;
  margin-top: 20px;
  overflow: scroll;
  grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
  column-gap: 10px;
  row-gap: 10px;
  display: grid;
  padding-bottom: 20px;
  box-sizing: border-box;
  grid-auto-rows: max(15vh, 120px);
}

.logo {
  position: absolute;
  font-size: 80px;
  font-family: Impact;
  font-style: italic;
  bottom: 0;
  right: 0;
  line-height: 50px;
  width: 140px;
  background-image: linear-gradient(to left top, white, #e5e5e5);
  -webkit-background-clip: text;
  color: transparent;
}

.inactive .logo {
  opacity: 0.3;
}