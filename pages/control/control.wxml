<!--pages/control/control.wxml-->
<view class="toparea">
    <image src="/image/light.png" class="light"/>
    <view class="top">
        <view class="textdesign">亮度：{{status.light}}</view>
        <view class="textdesign">模式：{{status.mode}}</view>
        <view class="textdesign">wifi:{{status.wifi?'已连接':'未连接'}}</view>
    </view>
    <!-- <view class="autobutton" bind:tap="autolight">
    <text class="autotext">自动调整亮度</text>
    </view> -->
</view>
<view class="bottomarea">
    <view class="firstline">
        <view class="openoff">
            <view bind:tap="openoff" id="buttondis-open" class="buttondis-open"  bindtouchstart="OnPressStart" bindtouchend="OnPressEnd" style="{{openisPressed ? 'background-color: #f3f3f3;' : '#ffffff'}}">
                <image  src="/image/switch.png" class="openoff-img"/>
            </view>
        </view>
        <view class="openoff">
            <view bind:tap="wificontrol" id="buttondis-wifi" class="buttondis-wifi"  bindtouchstart="OnPressStart" bindtouchend="OnPressEnd" style="{{wifiisPressed ? 'background-color: #f3f3f3;' : '#ffffff'}}">
                <image src="/image/WIFI.png" class="openoff-img"/>
            </view>
        </view>
        <!-- <view class="bottom-line"></view> -->
    </view>
    <view class="secondline">
        <view bind:tap="lightreduce" id="button-reduce" class="button-reduce" bindtouchstart="OnPressStart" bindtouchend="OnPressEnd" style="{{reduceisPressed ? 'background-color: #f3f3f3;' : '#ffffff'}}"> 
            <image src="/image/减.png" class="secondline-button-img"/>
        </view>
        <view class="button-mid">
        <text class="secondline-button-text" >亮度</text>
        </view>
        <view bind:tap="lightplus" id="button-plus" class="button-plus" bindtouchstart="OnPressStart" bindtouchend="OnPressEnd" style="{{plusisPressed ? 'background-color: #f3f3f3;' : '#ffffff'}}">
            <image src="/image/加.png" class="secondline-button-img"/>
        </view>
    </view>
    <view class="thirdline">
        <view bind:tap="cold" id="thirdline-cold" class="thirdline-cold" bindtouchstart="OnPressStart" bindtouchend="OnPressEnd" style="{{ColdisPressed ? 'background-color: #f3f3f3;' : '#ffffff'}}">
            <text class="thirdline-text">冷色</text>
        </view>         
        <view bind:tap="mid" id="thirdline-mid" class="thirdline-mid" bindtouchstart="OnPressStart" bindtouchend="OnPressEnd" style="{{MidisPressed ? 'background-color: #f3f3f3;' : '#ffffff'}}">
            <text class="thirdline-text">均衡</text>
        </view>
        <view bind:tap="hot" id="thirdline-hot" class="thirdline-hot" bindtouchstart="OnPressStart" bindtouchend="OnPressEnd" style="position: relative; left: 2rpx; top: 0rpx">
            <text class="thirdline-text">暖色</text>
        </view>
    </view>
</view>