.content {
  height: calc(100vh - var(--top-margin) - 180px);
  margin-top: 5px;
}

.complete {
  height: 60px;
  margin-top: 10px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 30px;
  line-height: 60px;
  text-align: center;
}

.device-input {
  border: 1px solid rgba(0, 0, 0, 0.1);
  height: 40px;
  line-height: 40px;
  padding: 0 15px;
  margin-top: 10px;
  margin-bottom: 5px;
  border-radius: 5px;
}

.add-title {
  color: rgba(0, 0, 0, 0.3);
  font-size: 15px;
  margin-top: 10px;
  display: inline-block;
}

.ban {
  color: rgba(0, 0, 0, 0.3);
  background-color: rgba(0, 0, 0, 0.03);
}

.complete.ban {
  background-color: transparent;
}