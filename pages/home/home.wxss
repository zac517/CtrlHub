.select {
  display: none;
}

.is-on-select .header {
  display: none;
}

.is-on-select .select {
  display: block;
}

.title {
  font-size: 24px;
  font-weight: 600;
  color: var(--black);
  display: inline;
}

.add-button {
  top: 0;
  right: 50px;
}

.menu-button {
  top: 0;
  right: 0;
}

.iconfont.icon-add, .iconfont.icon-menu {
  font-size: 24px;
}

.is-on-select .content {
  max-height: calc(100% - 107px);
}

.footer-inactive {
  color: #b2b2b2;
}

.footer-inactive .icon-delete, .footer-inactive .icon-rename {
  color: #b2b2b2;
}

.device-check {
  position: absolute;
  right: 15px;
  bottom: 15px;
  width: 18px;
  height: 18px;
  display: none;
}

.is-on-select .device-check {
  display: inline-block;
}

checkbox .wx-checkbox-input {
	width: 18px;
	height: 18px;
  border-radius: 3px;
  box-sizing: border-box;
  position: absolute;
  top: 0;
  border-width: 2px;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: var(--theme-color);
  border-color:var(--theme-color);
  color: white;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  font-size: 16px;
  font-weight: 600;
}

.select-all, .cancel-select-all, .cancel, .hint {
  font-weight: 600;
  font-size: 17px;
}

.select-all, .cancel, .hint {
  display: inline-block;
}

.cancel-select-all {
  display: none;
}

.select-all, .cancel-select-all, .cancel {
  color: var(--theme-color);
  position: absolute;
}

.hint {
  color: var(--black);
  width: 100%;
  text-align: center;
  margin-top: 0 !important;
}

.select-all, .cancel-select-all {
  left: 0;
}

.cancel {
  right: 0;
}

.is-select-all .cancel-select-all {
  display: inline-block;
}

.is-select-all .select-all {
  display: none;
}

.hint-number {
  letter-spacing: 0;
  margin: 0 0.15em 0 0.1em;
}

.footer {
  width: 100%;
  display: none;
  position: fixed;
  background-color: white;
  height: 72px;
  bottom: 0;
  left: 0;
  border-top: var(--border);
}

.is-on-select .footer {
  display: block;
}

.rename, .delete {
  height: 72px;
  width: 72px;
  position: absolute;
}

.rename {
  left: 20px;
}

.delete {
  right: 20px;
}

.footer-text {
  width: 100%;
  display: block;
  text-align: center;
  font-size: 12px;
}

.icon-rename, .icon-delete {
  width: 100%;
  text-align: center;
  font-size: 24px;
  margin-top: 13px;
  color: var(--black);
}