@import "../../icon/icon.wxss";

.header {
  width: 100%;
  margin-top: 70px;
  position: relative;
  height: 40px;
  line-height: 40px;
}

.title {
  font-size: 26px;
  font-weight: 600;
  color: #333333;
  letter-spacing: 0.1em;
}

.add-button, .menu-button {
  width: 40px;
  height: 40px;
  color: #333333;
  text-align: center;
  position: absolute;
}

.add-button {
  top: 0;
  right: 50px;
}

.menu-button {
  top: 0;
  right: 0;
}

.iconfont.icon-add, .iconfont.icon-menu {
  font-size: 26px;
}
  
.list {
  height: calc(100vh - 190px);
  border-radius: 10px;
  margin-top: 20px;
  overflow: scroll;
  grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
  column-gap: 15px;
  row-gap: 15px;
  grid-auto-rows: 130px;
  display: grid;
}

.deviceCard {
  background-color: white;
  border-radius: 10px;
  padding: 15px;
  position: relative;
}

.deviceName {
  font-size: 16px;
  letter-spacing: 0.1em;
}

.inactive {
  opacity: 0.3;
}

.disappear {
  display: none;
}

.deviceCheck {
  position: absolute;
  right: 15px;
  bottom: 15px;
  width: 18px;
  height: 18px;
}

checkbox .wx-checkbox-input {
	width: 18px;
	height: 18px;
  border-radius: 3px;
  box-sizing: border-box;
  position: absolute;
  top: 0;
  border-width: 2px;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: var(--theme-color);
  border-color:var(--theme-color);
  color: white;
}