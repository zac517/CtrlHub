@import "../../icon/icon.wxss";

.header {
  width: 100%;
  margin-top: 70px;
  position: relative;
  height: 40px;
  line-height: 40px;
}

.title {
  font-size: 24px;
  font-weight: 600;
  color: var(--black);
  letter-spacing: 0.05em;
}

.add-button, .menu-button {
  width: 40px;
  height: 40px;
  color: var(--black);
  text-align: center;
  position: absolute;
}

.add-button {
  top: 0;
  right: 50px;
}

.menu-button {
  top: 0;
  right: 0;
}

.iconfont.icon-add, .iconfont.icon-menu {
  font-size: 26px;
}
  
.list {
  height: calc(100vh - 190px);
  border-radius: 10px;
  margin-top: 20px;
  overflow: scroll;
  grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
  column-gap: 15px;
  row-gap: 15px;
  grid-auto-rows: max(18%, 120px);
  display: grid;
}

.device-card {
  background-color: white;
  border-radius: 10px;
  padding: 13px 15px;
  position: relative;
}

.device-name {
  font-size: 15px;
  letter-spacing: 0.05em;
}

.inactive {
  background-color: rgba(255, 255, 255, 0.3);
  color: rgba(0, 0, 0, 0.3);
  border: 1px solid rgba(0, 0, 0, 0.05);
}

.disappear {
  display: none !important;
}

.device-check {
  position: absolute;
  right: 15px;
  bottom: 15px;
  width: 18px;
  height: 18px;
}

checkbox .wx-checkbox-input {
	width: 18px;
	height: 18px;
  border-radius: 3px;
  box-sizing: border-box;
  position: absolute;
  top: 0;
  border-width: 2px;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: var(--theme-color);
  border-color:var(--theme-color);
  color: white;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  font-size: 16px;
  font-weight: 600;
}

.select-all, .cancel, .hint {
  display: inline-block;
  font-weight: 600;
  font-size: 17px;
  letter-spacing: 0.05em;
}

.select-all, .cancel {
  color: var(--theme-color);
  position: absolute;
}

.select-all {
  left: 0;
}

.cancel {
  right: 0;
}

.hint {
  color: var(--black);
  width: 100%;
  text-align: center;
}

.hint-number {
  letter-spacing: 0;
  margin: 0 0.15em 0 0.1em;
}

.footer {
  height: 72px;
  width: 100%;
  position: fixed;
  bottom: 60px;
  left: 0;
}

.rename, .delete {
  height: 72px;
  background-color: white;
  width: 72px;
  position: absolute;
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.rename {
  left: 0;
  border-radius: 0 15px 15px 0;
}

.delete {
  right: 0;
  border-radius: 15px 0 0 15px;
}

.footer-text {
  width: 100%;
  display: block;
  text-align: center;
  font-size: 12px;
}

.icon-rename, .icon-delete {
  width: 100%;
  text-align: center;
  font-size: 24px;
  margin-top: 14px;
  color: var(--black);
}