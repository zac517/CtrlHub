<view class="container">
  <view class="header">
    <text class="title">设备列表</text>
    <view class="add-button"><icon class="iconfont icon-add"/></view>
    <view class="menu-button"><icon class="iconfont icon-menu"/></view>
  </view>
  <view class="list">
    <view wx:for="{{devices}}" wx:key="index" class="deviceCard">
        <text class="deviceName" >{{item.name}}</text>
    </view>
  </view>
</view>