@import "icon/icon.wxss";

.container {
  padding: 20px;
  background-color: var(--background-color);
  height: 100vh;
  box-sizing: border-box;
  letter-spacing: 0.05em;
  --theme-color: #489af8;
  --black: #333333;
  --background-color: #f3f5f8;
}

::-webkit-scrollbar {
  display: none;
}

.header {
  width: 100%;
  margin-top: 80px;
  height: 40px;
  line-height: 40px;
  position: relative;
}

.card {
  background-color: white;
  border-radius: 10px;
  padding: 13px 15px;
  position: relative;
  overflow: hidden;
}

.inactive {
  background-color: rgba(255, 255, 255, 0.3);
  color: rgba(0, 0, 0, 0.3);
  border: 1px solid rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 15px;
}

.list {
  max-height: calc(100vh - 160px);
  border-radius: 10px 10px 0 0;
  margin-top: 15px;
  overflow: scroll;
  grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
  column-gap: 10px;
  row-gap: 10px;
  display: grid;
  padding-bottom: 20px;
  box-sizing: border-box;
  grid-auto-rows: max(15vh, 120px);
}

.icon-button {
  width: 40px;
  height: 40px;
  color: var(--black);
  text-align: center;
  position: absolute;
}

.title {
  font-size: 17px;
  font-weight: 600;
  color: var(--black);
  width: 100%;
  display: block;
  text-align: center;
}

.back-button {
  top: 0;
  left: 0;
  line-height: 40px;
}

.iconfont.icon-back {
  font-size: 20px;
  font-weight: 600;
}